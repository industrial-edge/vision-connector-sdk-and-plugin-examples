        "SDK_INCLUDE_DIR": "${sourceDir}/sdk/include",
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/installed_drivers"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      },
